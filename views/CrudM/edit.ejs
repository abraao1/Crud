<h2>Editar Registros<h2>
  <% data.forEach(function(details) { %>
    <div class="form-group">
    <form action="/edit/matheus/<%= details._id %>" method="POST">
      
      <label for="Nome">NOME</label>
      <input type="text" placeholder="NOME"  value="<%= details.name %>" name="name"  class="form-control" required>

     <label for="Sobrenome">SOBRENOME</label>
     <input type="text" placeholder="SOBRENOME"  value="<%= details.surname %>" name="surname"    class="form-control" required>

      <label for="Sexo">SEXO</label>
      <input type="text" placeholder="SEXO"  value="<%= details.sexo %>" name="sexo" min="F" max="M"  class="form-control" required>
      

      <label for="Cpf">CPF</label>
      <input type="number" placeholder="CPF" value="<%= details.cpf %>" name="cpf" min="0" size="11" max="99999999999"  class="form-control" required>
      

      <label for="Email">EMAIL</label>
      <input type="email"  placeholder="EMAIL" value="<%= details.email %>" name="email"  class="form-control" required>
      

      <label for="Numero">NUMERO</label>
      <input type="number" placeholder="NUMERO" value="<%= details.numero %>" name="numero" min="0" size="11" max="99999999999" class="form-control" required>
      

      <label for="Cep">CEP</label>
      <input type="number" placeholder="CEP" value="<%= details.cep %>" name="cep" min="0" size="8" max="123456789"  class="form-control" required>
      
      <label for="Uf/Cidade">UF/CIDADE</label>
      <input type="text" placeholder="UF/CIDADE"  value="<%= details.ufCidade %>" name="ufCidade"  class="form-control" required>
      <br/>
      <button type="submit" class="btn btn-dark btn-sm"><a href="/show/matheus">TODOS OS REGISTROS</a></button>
      <button type="submit" class="btn btn-dark btn-sm">ATUALIZAR</button>
  </div>
